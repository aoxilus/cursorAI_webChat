{
	// === CONFIGURACIÓN DE RENDIMIENTO ===
	"files.watcherExclude": {
		"**/node_modules/**": true,
		"**/dist/**": true,
		"**/build/**": true,
		"**/.git/**": true,
		"**/generated_code.*": true,
		"**/*.bmp": true,
		"**/*.exe": true
	},
	"files.exclude": {
		"**/node_modules": true,
		"**/dist": true,
		"**/build": true,
		"**/.git": true,
		"**/*.bmp": true,
		"**/*.exe": true
	},
	"search.exclude": {
		"**/node_modules": true,
		"**/dist": true,
		"**/build": true,
		"**/.git": true,
		"**/generated_code.*": true,
		"**/*.bmp": true,
		"**/*.exe": true
	},

	// === OPTIMIZACIONES DE MEMORIA ===
	"files.maxMemoryForLargeFilesMB": 8192,
	"workbench.editor.enablePreview": false,
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"workbench.editor.closeOnFileDelete": true,
	"workbench.editor.closeEmptyGroups": true,

	// === CONFIGURACIÓN DE TERMINAL ===
	"terminal.integrated.scrollback": 1000,
	"terminal.integrated.maximumLinks": 100,
	"terminal.integrated.gpuAcceleration": "on",
	"terminal.integrated.rendererType": "canvas",
	        "terminal.integrated.shell.windows": "powershell.exe",
	"terminal.integrated.defaultProfile.windows": "PowerShell",
	"terminal.integrated.profiles.windows": {
		"PowerShell": {
			"source": "PowerShell",
			"icon": "terminal-powershell"
		}
	},

	// === CONFIGURACIÓN DE C++ ===
	"C_Cpp.intelliSenseEngine": "default",
	"C_Cpp.intelliSenseEngineFallback": "enabled",
	"C_Cpp.autocomplete": "default",
	"C_Cpp.errorSquiggles": "enabled",
	"C_Cpp.enhancedColorization": "enabled",
	"C_Cpp.suggestSnippets": true,
	"C_Cpp.default.cppStandard": "c++17",
	"C_Cpp.default.cStandard": "c11",
	"C_Cpp.default.compilerPath": "C:\\msys64\\mingw64\\bin\\g++.exe",
	"C_Cpp.default.includePath": [
		"${workspaceFolder}/**",
		"C:\\msys64\\mingw64\\include",
		"C:\\msys64\\mingw64\\include\\c++\\12.2.0",
		"C:\\msys64\\mingw64\\include\\c++\\12.2.0\\x86_64-w64-mingw32"
	],

	// === CONFIGURACIÓN DE POWERSHELL ===
	"powershell.integratedConsole.showOnStartup": false,
	"powershell.integratedConsole.focusConsoleOnExecute": false,
	"powershell.integratedConsole.hostArgs": [
		"-NoLogo",
		"-NoProfile",
		"-ExecutionPolicy", "Bypass"
	],
	"powershell.debugging.createTemporaryIntegratedConsole": false,

	// === CONFIGURACIÓN DE ARCHIVOS ===
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 1000,
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.eol": "\n",
	"files.encoding": "utf8",

	// === CONFIGURACIÓN DE EDITOR ===
	"editor.tabSize": 4,
	"editor.insertSpaces": true,
	"editor.detectIndentation": false,
	"editor.wordWrap": "off",
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "none",
	"editor.renderControlCharacters": false,
	"editor.renderLineHighlight": "line",
	"editor.cursorBlinking": "solid",
	"editor.cursorSmoothCaretAnimation": "off",
	"editor.smoothScrolling": false,
	"editor.mouseWheelScrollSensitivity": 1,
	"editor.fontSize": 12,
	"editor.fontFamily": "Consolas, 'Courier New', monospace",
	"editor.fontLigatures": false,

	// === CONFIGURACIÓN DE BÚSQUEDA ===
	"search.useGlobalIgnoreFiles": true,
	"search.useParentIgnoreFiles": true,
	"search.useIgnoreFiles": true,
	"search.followSymlinks": false,
	"search.maxResults": 1000,

	// === CONFIGURACIÓN DE GIT ===
	"git.enabled": true,
	"git.autorefresh": false,
	"git.autofetch": false,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"git.enableCommitSigning": false,

	// === CONFIGURACIÓN DE WORKSPACE ===
	"workbench.startupEditor": "none",
	"workbench.editor.showTabs": "singleClick",
	"workbench.editor.decorations.badges": false,
	"workbench.editor.decorations.colors": false,
	"workbench.activityBar.visible": true,
	"workbench.sideBar.location": "left",
	"workbench.panel.defaultLocation": "bottom",
	"workbench.statusBar.visible": true,

	// === CONFIGURACIÓN DE EXTENSIONES ===
	"extensions.autoUpdate": false,
	"extensions.autoCheckUpdates": false,
	"extensions.ignoreRecommendations": true,

	// === CONFIGURACIÓN DE DEBUGGING ===
	"debug.console.closeOnEnd": true,
	"debug.inlineValues": false,
	"debug.showBreakpointsInOverviewRuler": false,
	"debug.showInlineBreakpointCandidates": false,

	// === CONFIGURACIÓN DE TAREAS ===
	"task.autoDetect": "off",
	"task.slowProviderWarning": false,

	// === CONFIGURACIÓN DE PROBLEMAS ===
	"problems.decorations.enabled": false,
	"problems.showCurrentInStatus": false,

	// === CONFIGURACIÓN DE EXPLORADOR ===
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.incrementalNaming": "smart",
	"explorer.compactFolders": false,

	// === CONFIGURACIÓN DE NOTIFICACIONES ===
	"notifications.enable": false,
	"update.mode": "none",
	"update.showReleaseNotes": false,

	// === CONFIGURACIÓN DE RENDIMIENTO ESPECÍFICA ===
	"typescript.suggest.enabled": false,
	"javascript.suggest.enabled": false,
	"html.suggest.enabled": false,
	"css.suggest.enabled": false,
	"json.suggest.enabled": false,
	"markdown.suggest.enabled": false,
	"emmet.triggerExpansionOnTab": false,
	"emmet.showExpandedAbbreviation": "never",

	// === CONFIGURACIÓN DE LINTERS ===
	"eslint.enable": false,
	"prettier.enable": false,
	"stylelint.enable": false,

	// === CONFIGURACIÓN DE COMPILACIÓN ===
	"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
	"C_Cpp.default.compileCommands": "${workspaceFolder}/compile_commands.json",

	// === CONFIGURACIÓN DE MEMORIA ===
	"files.maxMemoryForLargeFilesMB": 16384,
	"workbench.editor.limit.enabled": true,
	"workbench.editor.limit.value": 8,
	"workbench.editor.limit.perEditorGroup": true,

	// === CONFIGURACIÓN DE BACKUP ===
	"files.backup": false,
	"files.hotExit": "off",

	// === CONFIGURACIÓN DE SINCRONIZACIÓN ===
	"sync.enabled": false,
	"sync.autoDownload": false,
	"sync.autoUpload": false,

	// === CONFIGURACIÓN DE TELEMETRÍA ===
	"telemetry.telemetryLevel": "off",
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false
}
